<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Details"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/pollQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Poll Question"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/pollOptionOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 1"/>

        <EditText
            android:id="@+id/pollOptionTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 2"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/pollOptionThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 3"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonCreatePoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="createPoll"
        android:text="Create Poll" />

    <!-- Assuming you want to keep the logout button here -->
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout" />
</LinearLayout>
